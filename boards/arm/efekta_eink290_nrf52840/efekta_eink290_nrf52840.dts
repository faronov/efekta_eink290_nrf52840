/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "EFEKTA EINK290 nRF52840";
	compatible = "efekta,efekta-eink290-nrf52840";
	
	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "disabled";
};

&i2c1 {

	compatible = "nordic,nrf-twi";
		status = "okay";
		sda-pin = <28>;
		scl-pin = <3>;
	
		max44009@4a {
			compatible = "maxim,max44009";
			reg = <0x4a>;
			int-gpios = <&gpio0 29 0>;
			label = "MAX44009";
		};

		bme280@77 {
			compatible = "bosch,bme280";
			reg = <0x77>;
			label = "BME280";
		};
};

&spi0 {
	compatible = "nordic,nrf-spi";
	/* Cannot be used together with i2c0. */
	status = "okay"; 
	sck-pin = <20>;
	mosi-pin = <15>;
	miso-pin = <21>;
	cs-gpios = <&gpio0 22 GPIO_ACTIVE_LOW>;

	uc8151@0{
		compatible = "ultrachip,uc8151", "gooddisplay,gdem029t94";
		label = "UC8151";
		spi-max-frequency = <4000000>;
		reg = < 0x0 >;
		pwr = [03 00 2b 2b 03];
		width = <296>;
		height = <128>;
		dc-gpios = <&gpio0 31 GPIO_ACTIVE_LOW>;
		busy-gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;	
		reset-gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;
		cdi = <0xd7>;
		tcon = <0x22>;
		otp = <0xbf>;
		softstart = [17 17 17];
		lut-initial = [
			
		];
		lut-default = [
			
		];
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x72000>;
		};
		slot1_partition: partition@7e000 {
			label = "image-1";
			reg = <0x7e000 0x72000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0xfa000 0x6000>;
		};
	};
};

